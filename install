#!/bin/bash
# Simple Aba installer.  Copy aba command somewhere into the $PATH

cd $(dirname $0)

if [ -x scripts/aba.sh ]; then
	if [[ "$PATH" =~ "/usr/local/bin:" ]]; then
		sudo cp -p scripts/aba.sh /usr/local/bin/aba && echo "aba has been installed to /usr/local/bin/aba" && exit 0
	fi

	if [[ "$PATH" =~ "$HOME/bin:" ]]; then
		mkdir -p $HOME/bin
		cp -p scripts/aba.sh $HOME/bin
	fi

	if [ $? -eq 0 ]; then
		echo "aba has been installed to $HOME/bin"

		exit 0
	else
		echo "Please copy aba into your PATH"

		exit 1
	fi
else
	echo "aba file not found in $PWD"

	exit 1
fi

